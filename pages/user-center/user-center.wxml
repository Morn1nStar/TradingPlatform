<view class="user-center">
  <view class="above">
    <image class="avatar" src="/images/icons/avatar.png" bind:tap="goToInformation" />
    <text bind:tap="goToInformation">微信用户</text>
  </view>
  <view class="middle-container">
    <text class="middle">我的交易</text>
    <view class="function-container">
      <view class="function-item release" bind:tap="goToReleasing">
        <image src="/images/icons/release.png"></image>
        <text>我的发布</text>
      </view>

      <view class="function-item order" bind:tap="goToOrder">
        <image src="/images/icons/order.png"></image>
        <text>我的订单</text>
      </view>

      <view class="function-item message" bind:tap="goToMessage">
        <image src="/images/icons/message.png"></image>
        <text>我的消息</text>
      </view>
    </view>
  </view>
</view>
